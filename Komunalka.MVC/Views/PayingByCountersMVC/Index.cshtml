@model IEnumerable<Komunalka.DAL.Models.PayingByCounter>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Account)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CounterIndicationsCurrent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentIndicationsPrevious)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CounterIndicationsDifference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RateCommon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RateDiscount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiscountIndicationsAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceProvider)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Account)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CounterIndicationsCurrent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentIndicationsPrevious)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CounterIndicationsDifference)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RateCommon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RateDiscount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountIndicationsAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Summa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payment.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceProvider.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
